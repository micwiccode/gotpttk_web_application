{% extends "index.html.twig" %}
{% block stylesheets %}
	<link href="https://fonts.googleapis.com/css?family=Didact+Gothic&display=swap" rel="stylesheet">
	<link href="{{ asset('../public/assets/css/index.css') }}" rel="stylesheet">
	<link href="{{ asset('../public/assets/css/button.css') }}" rel="stylesheet">
	<link href="{{ asset('../public/assets/css/book.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
{% if logged %}
	{{ include('headerTourist.html.twig') }}
{% else %}
	{{ include('header.html.twig') }}
{% endif %}
	<div class="container">
		<div class="content">
			<h3 class="content__title">Twoja Elektroniczna Książeczka GOT</h3>
			<div class="box">
                <div class="box__book">
                    <img id="profilepic" src="../public/assets/img/profilepic.png" alt="Profile picture">
				    <div class="box__userdata">
						    <p id="name">{{imie}} {{nazwisko}}</p>
                            <p id="dur">01.01.1980r.</p>
                            <p id="badge">{{degree}}</p>
                            <p id="sum">Liczba punktów: {{points}}</p>
                    </div>
				</div>
                <div class="box__book">
                    <a class="link black" href='' >Edytuj dane osobowe</a>
                    <a class="link button box__book__button" href='./trailsList'>Lista tras</a>
                </div>
			</div>
		</div>
	</div>
</div>
	{{ include('footer.html.twig') }}
{% endblock %}
